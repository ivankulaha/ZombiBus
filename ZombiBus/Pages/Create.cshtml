@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ZombiBus.Pages.CreateModel;

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}


<p>Enter a connection details:</p>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <span asp-validation-for="Connection!.ConnectionString"></span><br/>
    <span asp-validation-for="Connection!.QueueName"></span><br/>
    Connection string:
    <input asp-for="Connection!.ConnectionString" /><br/>
    Queue name:
    <input asp-for="Connection!.QueueName" /><br/>
    <input type="submit" />
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}